// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./bh2.db"
}

model User {
    id String @id @default(uuid())
    name String
    color String
    createdAt DateTime @default(now())
    hostOf Game? @relation("host")
    playerIn Game[] @relation("players")
}

model Game {
    id   String @id @default(uuid())
    name String
    createdAt DateTime @default(now())
    dead Boolean @default(false)
    host   User @relation(fields: [hostId], references: [id], "host")
    hostId String @unique
    code String @unique
    hopChannelID String
    players User[] @relation("players")
}